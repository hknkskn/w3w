<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Remove trailing slash (e.g., /dashboard/ -> /dashboard)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} (.+)/$
  RewriteRule ^ %1 [R=301,L]

  # 2. Check if .html file exists for the URL (e.g., /dashboard -> dashboard.html)
  RewriteCond %{DOCUMENT_ROOT}/$1.html -f
  RewriteRule ^([^/]+)$ $1.html [L]

  # 3. SPA Fallback: If file/directory doesn't exist, serve index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
